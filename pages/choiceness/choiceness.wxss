@keyframes flash {
  from {
    opacity: .2;
  }
  to {
    opacity: 1;
  }
}
.rotateRight {
  transform: rotate(180deg);
}
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.header {
  position: fixed;
  width: 100%;
  height: 80px;
  top: 0;
  background-color: #FFF;
}
.search {
  height: 40px;
}
.searchView {
  background-color: #e9e8ee;
  width: 265px;
  height: 35px;
  line-height: 35px;
  margin-left: 13px; 
  border-radius: 8px;
  display: block;
  padding-left: 36px;
  font-size: 15px;
  font-weight: 300px;
  color: #ccc;
}
.searchIcon {
  position: relative;
  display: block;
  float: left;
  top: 10px;
  left: 26px;
  z-index: 9998;
}
.searchClass, .moreTitle>image {
  display: block;
  position: relative;
  z-index: 9999;
  float: right;
  right: 13px;
}
.searchClass {
  top: -34px;
  width: 32px;
  height: 32px;
}
.moreTitle>image {
  top: -24px;
  width: 20px;
  height: 20px;
  transition: all 0.4s ease;
}

.nav {
  background: #FFF;
  height: 28px;
  width: 330px;
  margin-top: 5px;
  overflow: hidden;
  white-space: nowrap; 
  display: flex;
}
.nav navigator {
  display: inline-block;
  line-height: 28px;
  margin-left: 15px;
  font-size: 15px;
  font-weight: 300;
}
.nav navigator:first-child {
  color: #dd00ff;
  margin-left: 12px;
  font-weight: bolder
}

/*popMenu*/
.pop {

  position: fixed;
  width:100%;  
  height:100%;
  z-index: 9997;
}
.popOut {
  height: 0px;
  transition: all .1s cubic-bezier(0, 1, 0.1, 1);
}
.zhezao{  
  position:fixed;  
  width:100%;  
  height:100%;  
  top:80px;  
  background:rgba(0,0,0,0.4);  
  overflow: hidden;  
  
}
.popMenu {
  background-color: #FFF;
  position: fixed;
  width: 100%;
  height: 380px;
  top: 75px;
  transition: all .1s cubic-bezier(0, 1, 0.1, 1);
}
.choose {
  position: absolute;
  display: block;
  font-size: 15px;
  font-weight: 300;
  top: -26px;
  margin-left: 15px;
}
.moreNav {
  position: absolute;
  font-size: 15px;
  font-weight: 300;
  top: 30px;
  margin-left: 15px;
  z-index: 9999;
  width:auto;
  height:auto;
}
.moreNav navigator {
  float: left;
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 20px;
  margin-top: 10px;
  text-align: center;
  width: 67px;
}
.moreNav image {
  float:left;
  top: -10px;
  margin-left: 30px;
  margin-right: 30px;
  width: 27px;
  height: 27px;
}

.content {
  background: #777;
  height: 300px;
  margin-top: 80px;
}
.content text {
  display: block;
  max-width: 100px;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
  position: relative;
  top: 80px;
  font-size: 15px;
  color: #FFF;
}
.content .inner {
  font-size: 20px;
  margin-bottom: 5px;
  border-top: 1px solid #FFF;
  border-bottom: 1px solid #FFF;
  padding: 2px;
}
.content button {
  border: none;
  background: #333;
  color: #eee;
  font-size: 13px;
  width: 80px;
  border-radius: 5px;
  position: relative;
  margin-top: 90px;
}
.more text {
  font-size: 15px;
  color: black;
  position: relative;
  margin-top: 180px;
}
.more .arrowdown {
  width: 30px;
  height: 25px;
  position: relative;
  top: 83px;
  display: block;
  margin: 0 auto;
  animation: flash .8s infinite alternate;
}