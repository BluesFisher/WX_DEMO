.header {
  position: fixed;
  width: 100%;
  height: 40px;
  top: 0;
  background-color: #FFF;
  z-index:9999;
  border-bottom: .5px solid #e9e8ee;
}
.search {
  height: 40px;
  width: 320px;
  display: block;
  float: left;
}
.searchView {
  background-color: #e9e8ee;
  width: 265px;
  height: 35px;
  margin-left: 13px; 
  border-radius: 8px;
  display: block;
  font-size: 16px;
  padding-left: 36px;
}
.searchIcon {
  position: relative;
  display: block;
  float: left;
  top: 10px;
  left: 26px;
  z-index: 9999;
}
.placeholder
{
  font-size: 15px;
  font-weight: 300px;
  color: #ccc;
}
.cancel {
  float: right;
  margin-right: 12px;
  margin-top: 6px;
  color: #bbb;
  font-size: 17px;
  font-weight: 300px;
}