@keyframes flash {
  from {
    opacity: .2;
  }
  to {
    opacity: 1;
  }
}
.rotateRight {
  transform: rotate(180deg);
}
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes rot {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(30deg);
  }
}

.header {
  position: fixed;
  width: 100%;
  height: 80px;
  top: 0;
  background-color: #FFF;
  z-index: 9996;

}
.search {
  height: 40px;
}
.searchView {
  background-color: #e9e8ee;
  width: 265px;
  height: 35px;
  line-height: 35px;
  margin-left: 13px; 
  border-radius: 8px;
  display: block;
  padding-left: 36px;
  font-size: 15px;
  font-weight: 300px;
  color: #ccc;
}
.searchIcon {
  position: relative;
  display: block;
  float: left;
  top: 10px;
  left: 26px;
  z-index: 9998;
}
.searchClass, .moreTitle>image {
  display: block;
  position: relative;
  z-index: 9999;
  float: right;
  right: 13px;
}
.searchClass {
  top: -34px;
  width: 32px;
  height: 32px;
}
.moreTitle>image {
  top: -24px;
  width: 20px;
  height: 20px;
  transition: all 0.4s ease;
}

.nav {
  background: #FFF;
  height: 28px;
  width: 330px;
  margin-top: 5px;
  overflow: hidden;
  white-space: nowrap; 
  display: flex;
  margin-left: 15px;
}
.nav view {
  display: inline-block;
  line-height: 20px;
  margin-right: 15px;
  font-size: 15px;
  font-weight: 300;
}
.nav view:first-child {
  color: #d4237a;
  font-weight: bolder;
}
.nav .on {  
  color: #d4237a; 
  font-weight: bolder; 
  border-bottom: 2px solid #d4237a;
} 

